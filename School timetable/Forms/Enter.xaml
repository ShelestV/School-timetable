<Window x:Class="School_timetable.Forms.Enter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:School_timetable.Forms"
        mc:Ignorable="d"
        Title="Timetable" 
        Height="330" 
        Width="580" 
        Background="{StaticResource black}" 
        BorderThickness="0" 
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <DockPanel>
            <DockPanel Name="TopPanel" DockPanel.Dock="Top" Style="{StaticResource TopPanel}">
                <Button Style="{StaticResource CloseButton}">
                    <Image Style="{StaticResource CloseImage}"/>
                </Button>
                <Button Style="{StaticResource MinimizeButton}">
                    <Image Style="{StaticResource MinimizeImage}"/>
                </Button>
                <Image Style="{StaticResource LogoImage}"/>
                <Label Style="{StaticResource NameWindowLabel}"/>
            </DockPanel>
            <Canvas>
                <Label Content="Login:" 
                       FontSize="24" 
                       Foreground="{StaticResource yellow}" 
                       Canvas.Top="60" 
                       Canvas.Left="60">
                </Label>
                <Label Content="Password:" 
                       FontSize="24" 
                       Foreground="{StaticResource yellow}" 
                       Canvas.Top="120" 
                       Canvas.Left="60">
                </Label>
                <TextBox Name="LoginTextBox" 
                     Width="250" 
                     FontSize="20" 
                     Background="{StaticResource darkGray}" 
                     Foreground="{StaticResource yellow}"
                     BorderBrush="{StaticResource yellow}" 
                     Canvas.Top="66" 
                     Canvas.Left="200">
                </TextBox>
                <PasswordBox Name="PasswordTextBox" 
                         Width="250" 
                         FontSize="20" 
                         Background="{StaticResource darkGray}" 
                         Foreground="{StaticResource yellow}"
                         BorderBrush="{StaticResource yellow}" 
                         Canvas.Top="126" 
                         Canvas.Left="200">
                </PasswordBox>
                <Button Name="RegistrationButton"
                    Width="130"
                    FontSize="20"
                    FontWeight="Thin"
                    Background="{StaticResource black}"
                    Foreground="{StaticResource yellow}"
                    BorderBrush="{StaticResource black}"
                    Canvas.Top="160" 
                    Canvas.Left="260"
                    Click="RegistrationButton_Click">
                    <TextBlock TextDecorations="Underline">
                    Registration
                    </TextBlock>
                </Button>
                <Button Name="EnterButton"
                        Width="130"
                        FontSize="20"
                        Background="{StaticResource darkGray}"
                        Foreground="{StaticResource yellow}"
                        BorderBrush="{StaticResource yellow}"
                        Canvas.Top="200" 
                        Canvas.Left="260"
                        Click="EnterButton_Click">
                    Enter
                </Button>
            </Canvas>
        </DockPanel>
    </Grid>
</Window>
